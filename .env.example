# Copy this file to `.env` and fill in real values. Do NOT commit `.env`.

# --- Database ---
DATABASE_URL="postgresql://app:app@localhost:65432/appdb?schema=public"

# --- Server ---
# API port (default 4000 if unset)
PORT=4000
# JWT secret for signing auth tokens (change in production)
JWT_SECRET="dev-secret-do-not-use-in-prod"

# --- Twilio (OTP SMS) ---
# Toggle Twilio sending. If false or unset, API returns OTP in response for dev.
TWILIO_ENABLED=false
# Your Twilio Account SID (starts with AC...)
TWILIO_ACCOUNT_SID=""
# Your Twilio Auth Token
TWILIO_AUTH_TOKEN=""
# Your Twilio phone number in E.164 format (e.g., +12025550123)
TWILIO_PHONE_NUMBER=""
